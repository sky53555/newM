/* swiper */
.swiper-container {
  width: 80%;
  height: 600px;
  margin: 100px auto;
  border-radius: 20px;
  /* overflow: hidden; */
  position: relative;
}
.swiper-container h2 {
  position: absolute;
  bottom: 2rem;
  left: 2rem;
  font-size: 3rem;
}
.swiper-slide {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  cursor: pointer;
  display: flex;
  transition: 0.3s all;
  box-shadow: 0 0 20px #00000036;
  border-radius: 10px;
}
.swiper-slide-active {
  transition: 0.3s all;
  opacity: 1;
  background-color: orange;
}
